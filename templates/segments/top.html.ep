<!DOCTYPE html>
<html lang="en">
	<head>
		%= include 'segments/head'
	</head>
	<body>
		<div id="wrapper">
			<!-- sidebar -->
			<div id="sidebar-wrapper">
				<ul class="sidebar-nav">
				% foreach my $item ( @{ $sidebar } ) {
					<li><a href="<%= $item->{href} %>"><%= $item->{name} %></a></li>
				% }
				</ul>
				<div id="menu-toggle"><p><i class="glyphicon glyphicon-chevron-right"></i></p></div>
			</div>
			<!-- /sidebar -->

			<!-- content -->
			<div id="page-content-wrapper">
				<p class="header"><%= $settings->{header} if $header %></p>
