<div class="form-group form-group-lg">
	<label class="control-label col-sm-4 col-md-3" for="<%= $name %>"><%= $label %>:</label>
	<div class="col-xs-12 col-sm-6">
		<input type="<%= $name %>" class="form-control has-feedback <%== 'has-error' if $error %>" name="<%= $name %>" placeholder="<%= $placeholder %>" value="<%= $value %>">
	</div>
</div>

