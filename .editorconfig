# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{pl,pm,t,PL,html.ep}]
indent_style = tab
indent_size = tab
tab_size = 4
trim_trailing_whitespace = true

[*.{js,css,json}]
indent_style = space
indent_size = 2
